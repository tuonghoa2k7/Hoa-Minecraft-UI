{
  "namespace": "hoamcui:player_paperdoll",

  "player_paperdoll@elm.image": {
    "$hoamcui:element_texture|default": "@src/textures/ui/black_element",
    "texture": "$hoamcui:element_texture",
    "$hoamcui:element_background_alpha|default": 0.4,
    "alpha": "$hoamcui:element_background_alpha",
    "size": ["100%cm + 34px", "100%cm + 6px"],
    "anchor_from": "bottom_middle",
    "anchor_to": "bottom_middle",
    "layer": 0,
    "controls": [
      {
        "paperdoll@elm.panel": {
          "size": [32, 64],
          "offset": [0, -15],
          "controls": [
            {
              "paperdoll_renderer@elm.custom": {
                "renderer": "live_player_renderer",
                "layer": 1// ,
                // "animation_reset_name": "screen_animation_reset",
                // "anims": [
                //   "@common.screen_exit_size_animation_push",
                //   "@common.screen_exit_size_animation_pop",
                //   "@common.screen_entrance_size_animation_push",
                //   "@common.screen_entrance_size_animation_pop"
                // ]
              }
            }
          ]
        }
      }
    ]
  }
}
