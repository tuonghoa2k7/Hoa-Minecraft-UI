{
  "namespace": "hoamcui:hud",

  "hotbar_left_content@elm.empty_panel": {
    "controls": [
      {
        "hotbar_left_stack@elm.stack": {
          "orientation": "horizontal",
          "size": [ "100%c", "100%cm" ],
          "offset": [-2, 22],
          "anchor_from": "bottom_right",
          "anchor_to": "bottom_right",
          "use_child_anchors": true,
          "$padding_size": [2, 0],
          "controls": [
            {
              "player_paperdoll@hoamcui:player_paperdoll.player_paperdoll": {
                "anchor_from": "bottom_middle",
                "anchor_to": "bottom_middle",
                "bindings": [
                  {
                    "binding_name": "#paper_doll_visible",
                    "binding_name_override": "#visible"
                  }
                ]
              }
            },
            {
              "padding@elm.padding": {}
            },
            {
              "utility_tools@hoamcui:utility_tools.utility_tools": {
                "anchor_from": "bottom_middle",
                "anchor_to": "bottom_middle"
              }
            }
          ]
        }
      }
    ]
  },

  "hotbar_right_content@elm.empty_panel": {
    "controls": [
      {
        "hotbar_right_stack@elm.stack": {
          "orientation": "horizontal",
          "size": [ "100%c", "100%cm" ],
          "offset": [2, 22],
          "anchor_from": "bottom_left",
          "anchor_to": "bottom_left",
          "use_child_anchors": true,
          "$padding_size": [2, 0],
          "controls": [
            {
              "tools_durability@hoamcui:tools_durability.mainhand_durability": {}
            },
            {
              "padding@elm.padding": {}
            }
          ]
        }
      }
    ]
  }
}
