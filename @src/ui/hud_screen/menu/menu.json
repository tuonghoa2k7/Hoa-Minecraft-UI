  "menu@elm.panel": {
    "size": ["100%", "100%"],
    "layer": 100,
    "$image": "hoamcui:menu.menu_texture",
    "controls": [
      {
        "menu_background@$image": {
          "size": ["64%", "88%"],
          "controls": [
            {
              "menu_stack@elm.stack": {
                "orientation": "vertical",
                "size": ["100% - 16px", "100% - 16px"],
                "anchor_from": "center",
                "anchor_to": "center",
                "layer": 102,
                "controls": [
                  {
                    "menu_title@elm.panel": {
                      "size": ["100%", "10%"],
                      "layer": 104,
                      "controls": [
                        {
                          "menu_title_background@$image": {
                            "size": ["100%", "100%"],
                            "anchor_from": "center",
                            "anchor_to": "center",
                            "controls": [
                              {
                                "menu_title_text@elm.label": {
                                  "text": "menu_title",
                                  "font_size": "large"
                                }
                              }
                            ]
                          }
                        },
                        {
                          "menu_close_button_background@$image": {
                            "size": ["8% - 8px", "100% - 8px"],
                            "anchor_from": "right_middle",
                            "anchor_to": "right_middle",
                            "offset": [-4, 0],
                            "layer": 106,
                            "controls": [
                              {
                                "menu_close_button@$image": {
                                  "texture": "textures/ui/close_X_button",
                                  "size": ["100% + 16px", "100% + 16px"]
                                }
                              }
                            ]
                          }
                        }
                      ]
                    }
                  },
                  {
                    "menu_padding@elm.padding": {
                      "size": [0, "1%"]
                    }
                  },
                  {
                    "menu_content@elm.panel": {
                      "size": ["100%", "74%"],
                      "layer": 104,
                      "controls": [
                        {
                          "menu_content_background@$image": {
                            "size": ["100%", "100%"],
                            "controls": [
                              {
                                "menu_content_scroll@elm.panel": {
                                  "size": ["100% - 8px", "100% - 8px"],
                                  "controls": [
                                    {
                                      "menu_content_scrolling@common.scrolling_panel": {
                                        "size": ["100%", "100%"],
                                        "anchor_from": "center",
                                        "anchor_to": "center",
                                        "$show_background": false,
                                        "$scroll_bar_left_padding_size": [4, 0],
                                        "$scroll_bar_right_padding_size": [0, 0],
                                        "$scroll_size": [4, "100% - 4px"],
                                        "$scrolling_content": "hoamcui:menu.scroll_content_example",
                                        "$always_handle_scrolling": true
                                      }
                                    }
                                  ]
                                }
                              }
                            ]
                          }
                        }
                      ]
                    }
                  },
                  {
                    "menu_padding@elm.padding": {
                      "size": [0, "1%"]
                    }
                  },
                  {
                    "menu_button@elm.panel": {
                      "size": ["100%", "14%"],
                      "layer": 104,
                      "controls": [
                        {
                          "menu_button_background@$image": {
                            "size": ["100%", "100%"],
                            "controls": [
                              {
                                "menu_button_text@elm.label": {
                                  "text": "menu_button*3",
                                  "font_size": "extra_large"
                                }
                              }
                            ]
                          }
                        }
                      ]
                    }
                  }
                ]
              }
            }
          ]
        }
      }
    ]
  }
