{
  "namespace": "hoamcui:menu",

  "menu_texture@elm.element_background": {
  },

  "open_toggle@elm.empty_panel": {
    "anchor_from": "center",
    "anchor_to": "center",
    "layer": 100,
    "controls": [
      {
        "open_background@elm.image": {
          "texture": "@src/textures/ui/hud_element_background",
          "size": [32, 32],
          "$hud_element_background_alpha|default": 0.4,
          "alpha": "$hud_element_background_alpha",
          "layer": 2,
          "controls": [
            {
              "open@elm.image": {
                "texture": "textures/ui/close_X_button",
                "size": ["100% + 8px", "100% + 8px"],
                "layer": 4
              }
            }
          ]
        }
      }
    ]
  },

  "close_toggle@elm.empty_panel": {
    "anchor_from": "center",
    "anchor_to": "center",
    "layer": 100,
    "controls": [
      {
        "close_background@elm.image": {
          "texture": "@src/textures/ui/hud_element_background",
          "size": [32, 32],
          "$hud_element_background_alpha|default": 0.4,
          "alpha": "$hud_element_background_alpha",
          "layer": 2,
          "controls": [
            {
              "close@elm.image": {
                "texture": "textures/ui/close_X_button",
                "size": ["100% + 8px", "100% + 8px"],
                "layer": 4
              }
            }
          ]
        }
      }
    ]
  },

