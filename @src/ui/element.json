{
  "namespace": "elm",

  "panel": {
    "type": "panel"
  },

  "stack": {
    "type": "stack_panel"
  },

  "scroll": {
    "type": "scroll_view"
  },

  "collection": {
    "type": "collection_panel"
  },

  "input_panel": {
    "type": "input_panel"
  },

  "scn": {
    "type": "screen"
  },

  "toggle": {
    "type": "toggle"
  },

  "btn": {
    "type": "button"
  },

  "image": {
    "type": "image"
  },

  "label": {
    "type": "label"
  },

  "custom": {
    "type": "custom"
  },

  "edt.bx": {
    "type": "edit_box"
  },

  "grd": {
    "type": "grid"
  },

  "fct": {
    "type": "factory"
  },

  "empty_panel@elm.panel": {
    "size": [ 0, 0 ]
  },

  "item@elm.custom": {
    "renderer": "inventory_item_renderer"
  },

  "padding@elm.panel": {
    "$padding_size|default": [2, 2],
    "size": "$padding_size"
  },

  "element_background@elm.image": {
    "$hoamcui:element_texture|default": "@src/textures/ui/element/black_element",
    "texture": "$hoamcui:element_texture",
    "$hoamcui:element_background_alpha|default": 0.4,
    "alpha": "$hoamcui:element_background_alpha"
  },

  "cl:bnt@elm.btn": {
    "$click|default": "button.menu_select",
    "$doubleClick|default": "button.menu_select",
    "$disableDoubleclick|default": true,
    "button_mappings": [
      {
        "mapping_type": "pressed",
        "from_button_id": "button.menu_select",
        "to_button_id": "$click"
      },
      {
        "mapping_type": "double_pressed",
        "from_button_id": "button.menu_select",
        "ignored": "$disableDoubleclick",
        "to_button_id": "$doubleClick"
      }
    ]
  }
}
