  // },

  "hotbar_panel": {
    "modifications": [
      {
        "control_name": "hotbar_start_cap",
        "operation": "remove"
      },
      {
        "control_name": "hotbar_end_cap",
        "operation": "remove"
      },
      {
        "array_name": "controls",
        "operation": "insert_front",
        "value": [
          {
            "hoamcui:hotbar_left_content@hoamcui:hud.hotbar_left_content": {}
          }
        ]
      }
    ]
  },

  "root_panel/chat_stack": {
    "modifications": [
      {
        "control_name": "paper_doll_padding",
        "operation": "remove"
      },
      {
        "control_name": "paper_doll_padding_living_room",
        "operation": "remove"
      }
    ]
  },

  "hud_screen": {
    "$use_loading_bars": false,
    "$screen_animations": [],
    // "always_accepts_input": true,
    "render_only_when_topmost": false
  }
}
